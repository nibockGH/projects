---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import Badge from '../components/badge.astro';
import LinkedInIcon from '../components/icons/LinkedIn.astro';
import SocialPill from '../components/icons/SocialPill.astro';
import GitHubIcon from '../components/icons/GitHub.astro';
import MailIcon from '../components/icons/Mail.astro';
import SectionContainer from '../components/SectionContainer.astro';
---

<Layout title="Portfolio Nicolás Bock - Desarrollador y Programador web"
description='Desarrollador web eficiente rapido y de calidad'
>
	<main>
		<SectionContainer  class="py-44 pb-44"		>
		</SectionContainer>
		<SectionContainer id="">

		</SectionContainer>
		<section class="w-full mx-auto lg:w-2/4 py-44">
			<img class="rounded-full w-12 h-12 mb-4 opacity-100" src="https://avatars.githubusercontent.com/u/145991542?v=4" alt="nico-foto">
			<h1 class="text-white text-2xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6">
				¡Hola, soy Nicolás!<div class="flex  justify-center items-center">
					<a href="https://www.linkedin.com/in/nicolas-bock-a4aa92307/" target="_blank" 
					rel="noopener" class="flex justify-center items-center">
					<Badge>Disponible para trabajar</Badge>
				</a>
				</div>
			</h1>
		<h2 class="text-2xl opacity-80 text-wrap">Estudiante de <span class="" style="color: #5AC8FA;">Desarrollo de Software</span>. Soy<span class="opacity-80" style="color:rgb(72, 255, 72)"> Desarrollador Web</span>, tengo 19 años. Localizado en Santa Fe,Argentina.</h2>
	<nav class="flex  gap-x-4 mt-4 ">
	<SocialPill href="https://www.linkedin.com/in/nicolas-bock-a4aa92307/">
		<LinkedInIcon class="w-6 h-6"/>
